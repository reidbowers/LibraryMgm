<!DOCTYPE html>
<html lang="en">
        <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            
            <!-- Bootstrap CSS Link Goes Here -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            
            <title></title>
        </head>
        <body>
            <div class="container">
                <h1 class="text-center mt-3 mb-3"><%= title %></h1>

                <% if(action == 'add'){ %>

                <div class ="card">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <form method="POST" action="/sample_data/add_sample_data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>ISBN</label>
                                        <input type="text" name="isbn" id="isbn" class="form-control"/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Title</label>
                                        <input type="text" name="title" id="title" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Author</label>
                                        <input type="text" name="author" id="author" class="form-control"/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Genre</label>
                                        <select name="genre" class="form-control">
                                            <option value="Fiction">Fiction</option>
                                            <option value="Nonfiction">Nonfiction</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Quantity</label>
                                        <input type="number" name="quantity" id="quantity" class="form-control"/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Description</label>
                                        <textarea class="form-control" rows="5" id="medDesc" name="medDesc"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Published Year</label>
                                        <input type="number" name="publishyr" id="publishyr" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                            <div class ="mb-3">
                                <input type="submit" name="submit_button" class="btn btn-primary" value="Add Media"/>
                            </div>
                        </form>

                    </div>
                </div>

                <% } else if(action== 'edit') { %>
                    <div class ="card">
                        <div class="card-header">Sample Form</div>
                        <div class="card-body">
                            <form method="POST" action="/sample_data/edit/<%= sampleData.isbn %>">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>ISBN</label>
                                            <input type="text" name="isbn" id="isbn" class="form-control" value= "<%= sampleData.isbn %>" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Title</label>
                                            <input type="text" name="title" id="title" class="form-control"
                                            value= "<%= sampleData.title %>" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Author</label>
                                            <input type="text" name="author" id="author" class="form-control" value= "<%= sampleData.author %>"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Genre</label>
                                            <select name="genre" class="form-control">
                                                <option value="Fiction">Fiction</option>
                                                <option value="Nonfiction">Nonfiction</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Quantity</label>
                                            <input type="number" name="quantity" id="quantity" class="form-control" value= "<%= sampleData.quantity %>" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Description</label>
                                            <textarea class="form-control" rows="5" id="medDesc" name="medDesc"><%= sampleData.medDesc %></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Published Year</label>
                                            <input type="number" name="publishyr" id="publishyr" class="form-control" value= "<%= sampleData.publishyr %>" />
                                        </div>
                                    </div>
                                </div>
                                <div class ="mb-3">
                                    <input type="submit" name="submit_button" class="btn btn-primary" value="Add Media"/>
                                </div>
                            </form>
                            <script>
                                document.getElementById('genre').value="<%= sampleData.genre %>";
                            </script>
    
                        </div>
                    </div>
                

                <% } else{ %>
                
                   <div class="card">
                        <div class="card-header">
                            <div class ="row">
                                <div class = "col">Sample Data</div>
                                <div class = "col">
                                    <a href="/sample_data/add" class ="btn btn-success btn-sm float-end">Add</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class ="table table-bordered">
                                    <tr>
                                        <th>ISBN</th>
                                        <th>Media title</th>
                                        <th>Media Author</th>
                                        <th>Genre</th>
                                        <th>Available?</th>
                                        <th></th>
                                    </tr>
                                    <%
                                    if(sampleData.length > 0)
                                    {
                                        sampleData.forEach(function(data){
                                    %>
                                    <tr>
                                        <td><%= data.isbn %></td>
                                        <td><%= data.title %></td>
                                        <td><%= data.author %></td>
                                        <td><%= data.genre %></td>
                                        <td><% if (data.quantity>0){ %>
                                                YES
                                            <% } else { %>
                                                NO
                                             <% } %>
                                        </td>
                                        <td>
                                            <a href="/sample_data/edit/<%= data.isbn %>" class="btn btn-primary btn-sm">Edit</a>
                                        </td>
                                    </tr>
                                    <%});}
                                    else
                                    {%>
                                    <tr>
                                        <td colspan="5">No Data Found</td>
                                    </tr>
                                    <%  
                                    }
                                    %>
                                </table>
                            </div>
                        </div>
                   </div> 

                <% } %>
            </div>
        </body>
</html>